.about-content {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-weight: 700;
  color: #8d8f91;
  padding: 150px 0;

  @include tablets {
    padding: 60px 0;
  }
}

.about-profile {
  display: flex;
  justify-content: space-between;
  width: 80%;

  @include tablets {
    width: 90%;
  }

  @include bigphones {
    width: 100%;
    flex-direction: column;
    align-items: center;
  }
}