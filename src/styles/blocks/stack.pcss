.stack {
  width: 100%;
  display: flex;
  justify-content: flex-end;

  @include tablets {
    justify-content: center;
  }
}

.stack-content {
  width: 65%;
  margin-top: 40px;

  @include tablets {
    width: 85%;
    margin-top: 20px;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
}

.skills {
  @include tablets {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
}

.skills-row__list {
  display: flex;
  justify-content: flex-start;

  @include bigphones {
    width: 400px;
    flex-wrap: wrap;
    justify-content: center;
  }
}

.skills-row__title {
  @include bigphones {
    text-align: center;
    margin: 30px 0;
  }
}

