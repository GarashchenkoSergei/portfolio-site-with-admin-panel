.help {
  width: 50%;

  @include tablets {
    width: 60%;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  @include bigphones {
    width: 300px;
    align-items: flex-start;
  }
}

.help__text {
  margin-top: 60px;
  opacity: .6;
  font-weight: 700;

  @include tablets {
    margin-top: 20px;
    text-align: center;
  }

  @include bigphones {
    text-align: left;
  }
}